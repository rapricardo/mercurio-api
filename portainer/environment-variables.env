# =============================================================================
# PORTAINER STACK ENVIRONMENT VARIABLES
# =============================================================================
# Copy these variables into Portainer Stack Environment Variables section

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_postgres_password_change_this_now

# Encryption Configuration
# IMPORTANT: Generate new secrets for production using: openssl rand -base64 32
ENCRYPTION_KEK_SECRET=GENERATE_NEW_32_BYTE_BASE64_SECRET_FOR_PRODUCTION
EMAIL_DEK_SECRET=GENERATE_NEW_32_BYTE_BASE64_SECRET_FOR_PRODUCTION
PHONE_DEK_SECRET=GENERATE_NEW_32_BYTE_BASE64_SECRET_FOR_PRODUCTION
EMAIL_FINGERPRINT_SECRET=GENERATE_NEW_32_BYTE_BASE64_SECRET_FOR_PRODUCTION
PHONE_FINGERPRINT_SECRET=GENERATE_NEW_32_BYTE_BASE64_SECRET_FOR_PRODUCTION

# Optional: Domain configuration (if using Traefik)
DOMAIN=yourdomain.com