{
  "name": "mercurio-api",
  "version": "1.0.0",
  "description": "Mercurio Event Ingestion API - High-performance analytics data ingestion with PII encryption and multi-tenant architecture",
  "main": "dist/main.js",
  "license": "UNLICENSED",
  "private": true,
  "author": "Mercurio Team",
  "keywords": [
    "analytics",
    "event-ingestion",
    "api",
    "nestjs",
    "prisma",
    "multi-tenant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mercurio-api.git"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "jest --testPathPattern=integration.test.ts --runInBand",
    "test:unit": "jest --testPathPattern='(provision-tenant|validation|deduplication)\\.test\\.ts'",
    "test:load": "node test/load/load-test.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "provision:tenant": "ts-node scripts/provision-tenant.ts",
    "docker:build": "docker build -t mercurio-api .",
    "docker:run": "docker run -p 3000:3000 mercurio-api",
    "deploy": "npm run build && npm run prisma:deploy"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.56.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^11.1.0",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0",
    "fastify": "^4.25.2",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.7",
    "postmark": "^4.0.5",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.22.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
